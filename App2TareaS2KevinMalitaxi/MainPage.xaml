<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2TareaS2KevinMalitaxi.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Sistema de Calificaciones Estudiantes Universidad Israel" HorizontalTextAlignment="Center" TextColor="White" FontSize="20"/>
        </Frame>

        <Entry x:Name="txtUsuario" Placeholder="Por Favor Digite el Usuario: "/>
        <Entry x:Name="txtClave" Placeholder="Por Favor Digite su Clave: " IsPassword="True"/>

        
        <Button x:Name="btnAbrir" Text="Abrir Ventana Dos" Clicked="btnAbrir_Clicked"/>
        

    </StackLayout>

</ContentPage>
